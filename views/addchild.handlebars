<!DOCTYPE html>
<html lang="en" class="has-background-info-dark">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Child</title>
    <link rel="stylesheet" href="assets/style.css">
    <link rel="stylesheet" href="node_modules/bulma/css/bulma.css">
</head>

<!-- Nav Bar -->

<header>
    <div class="navbar is-white p-5 ">
              
        <div class="">
            <button class="button is-info" id="homeBtn">Home</button>
            <button class="button" id="childListBtn">Child List</button>
            <button class="button" id="addChildBtn">Add Child</button>
        </div>
        <div class="navbar-end">
            <button class="button is-danger is-outlined" id="signOutBtn">Sign Out</button>
        </div>
    </div>
</header>
    
<body>
    
    <div class="is-size-3 has-text-black m-2">
        <p><b>Add Child</b></p>
    </div>
      <div class="has-background-white is-size-5 p-2 has-text-black">
        <div>
          <!-- First Name -->
        <label class="label">First Name</label>
        <input type="text">
        <!-- Last Name -->
        <label class="label">Last Name</label>
        <input type="text">
        </div>
        <!-- Age -->
        <div class="">
        <p><b>Age</b>: <input type="number" min="5" max="10"></p>
      </div>
      <!-- Teacher selection -->
        <p><b>Teacher</b>:</p>
        <div class="is-size-6">
          <fieldset>
        <!-- Teacher 1 -->
            <div>
              <input type="radio" id="teacher1" name="teacher" value="teacher1">
              <label for="teacher1">Teacher 1</label>
            </div>
        <!-- Teacher 2 -->
            <div>
              <input type="radio" id="teacher2" name="teacher" value="teacher2">
              <label for="teacher2">Teacher 2</label>
            </div>
        <!-- Teacher 3 -->
            <div>
              <input type="radio" id="teacher3" name="teacher" value="teacher3">
              <label for="teacher3">Teacher 3</label>
            </div>
        </fieldset>
      </div>
      
      <!-- Restrictions -->
<div class="" id="restrictions">
    <p><b>Restrictions</b>:</p>
    <label class="is-size-5">Add a restriction:</label>
    <input type="text" id="restrictionsInput">
    <button class="button">Add</button>
    </div>
    <!-- Allergies -->
    <div class="" id="allergies">
      <p><b>Allergies</b>:</p>
      <label class="is-size-5">Add an allergy:</label>
      <input type="text" id="allergyInput">
      <button class="button">Add</button>
      
      <div class="level-right">
        <button id="doneBtn" class="button is-info m-3">Done</button>
      </div>
    </div>
  </div>
</body>
</html>